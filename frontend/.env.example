# Base URL of the deployed frontend (used for CORS headers back to your APIs)
NEXT_PUBLIC_APP_URL=https://your-app.vercel.app

# Auth service (Spring Boot @ 8083 in dev) â€“ use your public/prod URL for Vercel
NEXT_PUBLIC_AUTH_BASE=https://auth.your-domain.com

# Transport service (Spring Boot @ 8082 in dev)
NEXT_PUBLIC_TRANSPORT_BASE=https://transport.your-domain.com

# Optional: single API base used by some transport pages
NEXT_PUBLIC_API_BASE=https://api.your-domain.com
NEXT_PUBLIC_API_BASE_URL=https://api.your-domain.com

# Optional: network timeout overrides (milliseconds)
NEXT_PUBLIC_API_TIMEOUT=10000
NEXT_PUBLIC_TRANSPORT_TIMEOUT=10000
